  <div class="threequartercolumn onShowSiteMessage news">
    <% @siteMessages.limit(1).each do |row| %>
        <h3><span class="title"><%= row.title %></span><span class="created_at" style="float: right;color: whitesmoke;"><%= row.created_at.to_s[0..18] %></span></h3>
        <p><%= row.content %></p>
    <% end %>
    <!--<h3>The new Fluidity</h3>-->
    <!--<p>Welcome to Fluidity 2, a template created by <a href="http://www.davereederdesign.com/" title="davereederdesign">davereederdesign</a>.-->
    <!--<br />-->
    <!--This is actually version 2 of my original <a href="http://www.oswd.org/design/preview/id/2540"  title="fluidity">fluidity</a> template and features some improvements and tweaks.  <br />-->
