    <!--</p>-->
  </div><!-- end threequartercolumn -->

  <div class="onequartercolumn news">
    <h3>近期消息:</h3>
    <p>最近 Greengalaxy 活動訊息。</p>
    <ul>
      <% @siteMessages.each do |row| %>
          <li style="cursor: pointer; padding: 5px 20px 5px 20px;" class="getSiteMessageByID" messageId="<%= row.id %>"><%= row.title %></li>
      <% end %>
    </ul>

    <script>
        <!-- Ajax 刷新顯示消息 -->
        $('li.getSiteMessageByID').click(function(e){
            $.ajax({url:'/main/getSiteMessageByID',data:{id:$(e.target).attr('messageId')},type:'get',success:function(r,i,a){
                console.log(123);
                console.log(r,i,a);
                r.data.forEach(function(sr,si,sa){
                    var node=$('div.onShowSiteMessage:eq(0)');
                    node.find('h3 span.title').text(sr.title).hide().fadeIn(300);
                    node.find('p').text(sr.content).hide().fadeIn(300);
                    node.find('h3 span.created_at').text(sr.created_at.replace(/T/,' ').slice(0,19)).hide().fadeIn(300);
                });
            }});
        });

        $('li.getSiteMessageByID').hover(function(e){
            $(e.target).css({
                backgroundColor:'silver',
                borderRadius:15,
                color:'blue'
            });
        },function(e){
            $(e.target).css({
                backgroundColor:'transparent',
                color:'whitesmoke'
            });
        });
    </script>
